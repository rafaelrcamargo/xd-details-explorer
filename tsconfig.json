{
  "compilerOptions": {
    "outDir": "./",
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "target": "ES2015",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "baseUrl": "./src/",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "./src/types",
      "node"
    ],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "typeAcquisition": {
    "enable": true
  }
}